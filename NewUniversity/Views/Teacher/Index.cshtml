@model IEnumerable<NewUniversity.Models.Teacher>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
            @if (@item.TeacherProfileImage != null)
            {
                <img src="~/images/@item.TeacherProfileImage" class="rounded-circle" height="40" width="40" asp-append-version="true" />
            }
            </td>
            <td>
                <a asp-action="Subjects" asp-route-id="@item.Id">Subjects</a>
            </td>
        </tr>
        }
    </tbody>
</table>

