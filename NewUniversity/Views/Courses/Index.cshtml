@model NewUniversity.ViewModels.CourseFilterViewModel
<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Courses" asp-action="Index">
    <div class="row">
        <div class="col-3">
            <p class="form-group">
                <label>Semester</label>
                <select class="form-control" asp-for="CourseSemester" asp-items="Model.Semesters">
                    <option value=""></option>
                </select>
             </p>
        </div>
        <div class="col-3">
            <p class="form-group">
                <label>Programme</label>
                <select class="form-control" asp-for="CourseProgramme" asp-items="Model.Programmes">
                    <option value=""></option>
                </select>
            </p>
        </div>
        <div class="col-3">
            <p class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" asp-for="SearchString" />
            </p>
        </div>
        <div class="col-3">
            <p class="form-group">
                <label>Teacher</label>
                <input class="form-control" type="text" asp-for="TeacherString" />
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <p class="form-group">
                <input type="submit" value="Filter" class="align-content-center" />
            </p>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].Programme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].EducationLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].FirstTeacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].SecondTeacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Courses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Programme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstTeacher.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondTeacher.FirstName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
