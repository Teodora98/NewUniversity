<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @if (@item.TeacherProfileImage != null)
                {
                    <img src="~/images/@item.TeacherProfileImage" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="TeacherEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="TeacherDetails" asp-route-id="@item.Id">Details</a> |
                <a asp-action="TeacherDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>