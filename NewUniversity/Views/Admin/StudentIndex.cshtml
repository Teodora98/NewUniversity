@model IEnumerable<NewUniversity.Models.Student>
<p>
    <a asp-action="StudentCreate">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Index)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Index)
                </td>
                <td>
                    @if (@item.UserProfileImage != null)
                    {
                    <img src="~/images/@item.UserProfileImage" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="StudentEdit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="StudentDetails" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="StudentDelete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
